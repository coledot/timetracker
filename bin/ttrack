#!/Users/alex/.rvm/rubies/ruby-1.9.2-p290/bin/ruby -w
require 'ttrack'

tt = TTrack.new
case ARGV[0]
  when 'start' then
    tt.start ARGV[1], ARGV[2]
  when 'stop' then
    tt.stop
  when 'status' then
    tt.status ARGV[1]
  when 'init' then
    tt.init
  when 'report' then
    tt.report ARGV[1]
  when 'beguin' then
    timestamp = ARGV[3] ? "%s %s" % ARGV[2..3] : ARGV[2]
    tt.setstart ARGV[1], timestamp
  when 'end' then
    timestamp = ARGV[3] ? "%s %s" % ARGV[2..3] : ARGV[2]
    tt.setstop ARGV[1], timestamp
  when 'help' then
    tt.usage
  else tt.start ARGV[0], ARGV[1]
end
